	keywords = {Active contours, Finite difference methods, Helium, Image edge detection, Image segmentation, Level set, Mathematics, Object detection, Partial differential equations, Two-term control},
	file = {IEEE Xplore Abstract Record:C\:\\Users\\INES\\Zotero\\storage\\X3ND4R6Z\\902291.html:text/html;Version soumise:C\:\\Users\\INES\\Zotero\\storage\\K9MLICWV\\Chan et Vese - 2001 - Active contours without edges.pdf:application/pdf},
