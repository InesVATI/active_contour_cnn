	keywords = {Active contours, Bioinformatics, Biomedical computing, Biomedical imaging, curve evolution, Hospitals, image segmentation, Image segmentation, Level set, level set methods, multiregion segmentation, partial differential equations, Partial differential equations, Robustness, Statistics},
